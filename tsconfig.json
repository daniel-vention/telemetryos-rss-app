{
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": true,
    "strict": true,
    "lib": ["DOM", "ESNext"],
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["./src"]
}
